<UserControl x:Class="PRN_SafeDrive_Aplication.Police.DisplayListExams"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="743">
    <Grid Background="#F6F8FB"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Border Background="White"
                CornerRadius="16"
                Padding="24"
                Margin="32"
                Effect="{DynamicResource DropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Tiêu đề -->
                    <RowDefinition Height="*"/>
                    <!-- Bảng -->
                    <RowDefinition Height="Auto"/>
                    <!-- Nút -->
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="DANH SÁCH CÁC KỲ THI HIỆN TẠI"
                           FontWeight="Bold"
                           FontSize="26"
                           Margin="0,0,0,24"
                           Foreground="#304FFE"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
                <DataGrid Grid.Row="1"
                          x:Name="dgExams"
                          FontSize="16"
                          RowHeight="40"
                          ColumnHeaderHeight="48"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Height="562"
                          GridLinesVisibility="None"
                          RowHeaderWidth="0"
                          BorderThickness="0"
                          Background="White"
                          Foreground="#222">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#E3E7ED"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Foreground" Value="#304FFE"/>
                            <Setter Property="Height" Value="48"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Margin" Value="0,2,0,2"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Opacity="0.04" BlurRadius="3"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#90CAF9"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên khóa học" Binding="{Binding NameCourse}" Width="*"/>
                        <DataGridTextColumn Header="Code Chứng Chỉ" Binding="{Binding CodeCertificate}" Width="130"/>
                        <DataGridTextColumn Header="Ngày thi" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="130"/>
                        <DataGridTextColumn Header="Phòng" Binding="{Binding Room}" Width="90"/>
                        <DataGridTextColumn Header="Giáo viên coi thi" Binding="{Binding Examer}" Width="200"/>
                        <DataGridTextColumn Header="Trạng Thái" Binding="{Binding Status}" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Nút nằm ngoài (dưới) bảng -->
                <Button Grid.Row="2"
                        x:Name="btnCreateExam"
                        Content="Tạo bài thi mới"
                        Width="180"
                        Height="40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#304FFE"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand" Click="btnCreateExam_Click" Margin="608,0,0,0"
                        />
            </Grid>
        </Border>
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="2" Color="#888" Opacity="0.12" />
        </Grid.Resources>
    </Grid>
</UserControl>