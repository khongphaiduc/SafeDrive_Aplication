<UserControl x:Class="PRN_SafeDrive_Aplication.Police.ViewAllScores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN_SafeDrive_Aplication.Police"
             Background="#f0f4f8"  mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Bảng Điểm Học Sinh"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#3F51B5"
                   Margin="0 0 0 20"
                   HorizontalAlignment="Center"/>

        <DataGrid Grid.Row="1"
                  x:Name="ScoresDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#F5F5F5"
                  BorderBrush="#E0E0E0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên Học Sinh" Binding="{Binding StudentName}" Width="*"/>
                <DataGridTextColumn Header="Tên Khóa Học" Binding="{Binding CourseName}" Width="*"/>
                <DataGridTextColumn Header="Ngày Thi" Binding="{Binding ExamDate}" Width="*"/>
                <DataGridTextColumn Header="Điểm" Binding="{Binding Score}" Width="*"/>
                <DataGridTextColumn Header="Trạng Thái" Binding="{Binding PassStatus}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>