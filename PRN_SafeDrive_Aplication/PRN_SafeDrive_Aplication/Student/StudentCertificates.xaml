<UserControl x:Class="PRN_SafeDrive_Aplication.Student.StudentCertificates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN_SafeDrive_Aplication.Student"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Padding="24"
             Background="#F5F7FB">

    <StackPanel>
        <TextBlock Text="🎓 Chứng chỉ của bạn"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2563EB"
                   Margin="0 0 0 20"/>

        <ItemsControl x:Name="CertificatesList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                            CornerRadius="12"
                            Padding="16"
                            Margin="0 0 0 16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="44" Height="44"
                                         Fill="LightSkyBlue"
                                         VerticalAlignment="Center">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="Gray" BlurRadius="4" ShadowDepth="2"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock Text="{Binding CertificateCode}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           VerticalAlignment="Center"
                                           Margin="12 0"/>
                            </StackPanel>

                            <StackPanel Margin="0 8 0 0">
                                <TextBlock Text="📅 Ngày cấp:"
                                           FontSize="14"
                                           Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding IssuedDate}"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="#34495E"/>
                            </StackPanel>

                            <StackPanel Margin="0 4 0 0">
                                <TextBlock Text="⌛ Hết hạn:"
                                           FontSize="14"
                                           Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding ExpirationDate}"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="#34495E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</UserControl>
