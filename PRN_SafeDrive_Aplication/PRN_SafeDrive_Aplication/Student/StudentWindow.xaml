<Window x:Class="PRN_SafeDrive_Aplication.Student.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student" Height="685" Width="1265" Background="White" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded" >
    <Grid>
        <Label Content="Student" HorizontalAlignment="Left" Height="80" Margin="75,31,0,0" VerticalAlignment="Top" Width="569" FontWeight="Heavy" FontSize="50" FontStyle="Italic" Foreground="Black"/>
        <Label x:Name="HelloMsgLabel" Content="Hello, Administrator" HorizontalAlignment="Left" Height="50" Margin="929,6,0,0" VerticalAlignment="Top" Width="315" FontSize="25" FontStyle="Italic" HorizontalContentAlignment="Right"/>
        <Rectangle HorizontalAlignment="Left" Height="95" Margin="39,140,0,0" Stroke="Black" VerticalAlignment="Top" Width="1171" Fill="green" RadiusX="10" RadiusY="10" />
        <Button x:Name="SearchButton" Content="Search Air Conditioner" HorizontalAlignment="Left" Height="50" Margin="75,162,0,0" VerticalAlignment="Top" Width="262" />
        <Label Content="Feature Function" FontSize="20" HorizontalAlignment="Left" Height="45" Margin="358,169,0,0" VerticalAlignment="Top" Width="152" Foreground="White" RenderTransformOrigin="0.003,0.49"/>
        <TextBox x:Name="FeatureFunctionTextBox" HorizontalAlignment="Left" Height="45" Margin="547,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303"/>
        <Label Content="Quantity" FontSize="20" HorizontalAlignment="Left" Height="45" Margin="876,167,0,0" VerticalAlignment="Top" Width="108" Foreground="White"/>
        <TextBox x:Name="QuantityTextBox" HorizontalAlignment="Left" Height="45" Margin="1003,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185"/>

        <Button x:Name="CreateButton" Content="Create Air Con" HorizontalAlignment="Left" Height="50" Margin="1003,294,0,0" VerticalAlignment="Top" Width="185"/>
        <Button x:Name="UpdateButton" Content="Update Air Con" HorizontalAlignment="Left" Height="50" Margin="1003,367,0,0" VerticalAlignment="Top" Width="185"/>
        <Button x:Name="DeleteButton" Content="Delete Air Con" HorizontalAlignment="Left" Height="50" Margin="1003,444,0,0" VerticalAlignment="Top" Width="185"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="50" Margin="1003,540,0,0" VerticalAlignment="Top" Width="185"/>

        <DataGrid x:Name="AirConsDataGrid" HorizontalAlignment="Left" Height="310" Margin="50,290,0,0" VerticalAlignment="Top" Width="948" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="40"/>
                <DataGridTextColumn Header="Air Con Name" Width="200"/>
                <DataGridTextColumn Header="Warranty" Width="70"/>
                <DataGridTextColumn Header="Sound Level" Width="100"/>
                <DataGridTextColumn Header="Feature Function" Width="200"/>
                <DataGridTextColumn Header="Quantity" Width="70"/>
                <DataGridTextColumn Header="Price ($)" Width="100"/>
                <DataGridTextColumn Header="Supplier ID" Width="70"/>
                <DataGridTextColumn Header="Supplier Name" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="© 2024 giáo.làng" HorizontalAlignment="Left" Height="45" Margin="34,605,0,0" VerticalAlignment="Top" Width="182" Foreground="#ffff00"/>
    </Grid>
</Window>